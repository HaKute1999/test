<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imageChooserContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white_radius"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvChoosePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:padding="@dimen/_14sdp"
                android:text="@string/choose_from_library"
                android:textColor="#000000"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <View
                android:id="@+id/viewCam"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#c6c6c6" />

            <TextView
                android:id="@+id/tvTakePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:padding="@dimen/_14sdp"
                android:text="@string/take_a_photo"
                android:textColor="#000000"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

<!--            <View-->
<!--                android:id="@+id/viewCam2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0.3dp"-->
<!--                android:background="#c6c6c6" />-->

<!--            <TextView-->
<!--                android:id="@+id/tvVoice"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:fontFamily="@font/font"-->
<!--                android:gravity="center"-->
<!--                android:padding="@dimen/_14sdp"-->
<!--                android:text="@string/voice_memos"-->
<!--                android:textColor="#000000"-->
<!--                android:textSize="@dimen/_14ssp"-->
<!--                android:textStyle="bold" />-->
        </LinearLayout>

        <TextView
            android:id="@+id/tvCancelPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/background_white_radius"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:text="@string/cancel2"
            android:textColor="#000000"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
