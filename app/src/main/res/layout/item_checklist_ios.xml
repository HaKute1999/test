<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checklist_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/selector">

    <EditText
        android:id="@+id/checklist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_32sdp"
        android:paddingStart="@dimen/_5sdp"
        android:textColor="#000000"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textCursorDrawable="@drawable/cursor_drawble"
        android:background="@android:color/transparent"

        android:textSize="@dimen/_13ssp" />

    <ImageView
        android:id="@+id/checklist_image"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_centerVertical="true"
        android:padding="@dimen/_9sdp"
        android:src="@drawable/circle_bg_note" />

    <ImageView
        android:id="@+id/checklist_image2"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_centerVertical="true"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/ic_checked_true2"
        android:visibility="gone" />


</RelativeLayout>
