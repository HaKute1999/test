<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checklist_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/selector">

    <TextView
        android:id="@+id/checklist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_toStartOf="@+id/checklist_drag_handle"
        android:paddingStart="@dimen/_5sdp"
        android:textColor="#000000"
        android:textSize="@dimen/_13ssp" />

    <ImageView
        android:id="@+id/checklist_image"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_centerVertical="true"
        android:padding="@dimen/_9sdp"
        android:src="@drawable/circle_bg_note" />

    <ImageView
        android:id="@+id/checklist_image2"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_centerVertical="true"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/ic_checked_true2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivRename"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_toStartOf="@+id/checklist_delete"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_rename_new"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/checklist_drag_handle"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/_8sdp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_menu_24"
        />

    <ImageView
        android:id="@+id/checklist_delete"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/checklist_drag_handle"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_delete_x"
        android:visibility="gone" />
</RelativeLayout>
