<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff">

    <LinearLayout
        android:id="@+id/dialog_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:background="@drawable/background_white_radius"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rename"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/font"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:text="@string/add_new_checklist_items"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp" />

        <ScrollView
           android:id="@+id/dialog_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:paddingStart="@dimen/activity_margin"
            android:paddingTop="@dimen/activity_margin"
            android:paddingEnd="@dimen/activity_margin"
            android:scrollbarSize="3dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/checklist_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <ImageView
                    android:id="@+id/add_item"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@drawable/background_add"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/ic_add_checklist"
                    app:tint="@color/main_color" />
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvA_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/font"
                android:gravity="center_vertical"
                android:textAllCaps="true"
                android:text="@string/cancel"
                android:textColor="#000000"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_15sdp"/>
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/font"
                android:gravity="center_vertical"
                android:text="@string/ok"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
