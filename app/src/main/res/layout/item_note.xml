<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_selector_light"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/ivLockHome"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_9sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:src="@drawable/ic_lock"
        android:visibility="gone"
        app:tint="#88878c" />

    <TextView
        android:id="@+id/tvTitleNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_toStartOf="@+id/image_note2"
        android:ellipsize="end"
        android:fontFamily="@font/font"
        android:maxLines="1"
        android:text="Title note"
        android:textColor="#000000"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvValueNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitleNote"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:layout_toStartOf="@+id/image_note2"
        android:ellipsize="end"
        android:fontFamily="@font/font"
        android:maxLines="1"
        android:text="This is content note"
        android:textColor="#88878c"
        android:textSize="@dimen/_12ssp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_below="@+id/tvValueNote"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:src="@drawable/ic_folder"
        />

    <TextView
        android:id="@+id/tvNoteSmall"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvValueNote"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_toEndOf="@+id/img"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="#88878c"
        android:textSize="@dimen/_10sdp" />

    <View
        android:id="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="0.45dp"
        android:layout_below="@+id/img"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="#c8c8c8" />

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.45dp"
        android:layout_below="@+id/img"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:visibility="gone" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_note2"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:scaleType="fitXY"
        app:riv_border_color="#d5d5d5"
        app:riv_border_width="0.6dp"
        app:riv_corner_radius="@dimen/_4sdp" />
</RelativeLayout>
