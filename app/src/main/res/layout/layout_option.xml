<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menuChooserContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
  >

    <LinearLayout
        android:id="@+id/ln_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_white_radius_top"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_6sdp">

            <View
                android:id="@+id/view5"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center"
                android:background="#7c7b80" />

            <ImageView
                android:id="@+id/close_dialog2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_close_dialog" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="@dimen/_50sdp"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/rl_pin"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                android:background="@drawable/background_white_radius">

                <ImageView
                    android:id="@+id/imgPin"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_pin" />

                <TextView
                    android:id="@+id/tvPin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/font"
                    android:maxLines="1"
                    android:text="@string/pin"
                    android:textColor="#ee9a37" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_delete"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/background_white_radius">

                <ImageView
                    android:id="@+id/ivDelete2"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_delete_x" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/font"
                    android:maxLines="1"
                    android:text="@string/deletes"
                    android:textColor="#e5553b" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_lock"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                android:background="@drawable/background_white_radius">

                <ImageView
                    android:id="@+id/ivLockNote"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_lock" />

                <TextView
                    android:id="@+id/tvLockNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/font"
                    android:maxLines="1"
                    android:text="@string/locks"
                    android:textColor="#5756ce" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/background_white_radius"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_sharenote"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/button_selector_light_top"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/font"
                    android:text="@string/share_notes"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/ic_share" />
            </RelativeLayout>

            <View
                android:id="@+id/viewOption"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#c6c6c6" />

            <RelativeLayout
                android:id="@+id/rl_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_39sdp"
                android:background="@drawable/button_selector_light"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/font"
                    android:text="@string/search_in_notes"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <ImageView
                    android:id="@+id/ivSearch2"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/ic_search2" />
            </RelativeLayout>

            <View
                android:id="@+id/viewOption1"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#c6c6c6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_39sdp"
                android:background="@drawable/button_selector_light"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/font"
                    android:text="@string/word_note_counts"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/tvWordCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/font"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />
            </RelativeLayout>

            <View
                android:id="@+id/viewOption2"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#c6c6c6" />

            <RelativeLayout
                android:id="@+id/rl_size"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_39sdp"
                android:background="@drawable/button_selector_light"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvSize1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/font"
                    android:text="@string/text_note_sizes"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/font"
                    android:text="100%"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12ssp" />
            </RelativeLayout>

            <View
                android:id="@+id/viewOption3"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#c6c6c6" />

            <RelativeLayout
                android:id="@+id/rlRestore"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_39sdp"
                android:background="@drawable/button_selector_light"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvRestore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/font"
                    android:text="@string/restore_notes"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/tvRestore2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/font"
                    android:text="@string/undo"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12ssp" />

                <View
                    android:id="@+id/viewOptionRestore"
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:layout_alignParentBottom="true"
                    android:background="#c6c6c6" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_font"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_39sdp"
                android:background="@drawable/button_selector_light"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvFont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/tvFontChoose"
                    android:ellipsize="end"
                    android:fontFamily="@font/font"
                    android:maxLines="1"
                    android:text="@string/note_font_pro_version"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/tvFontChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/font"
                    android:text="@string/upgrade"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12ssp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_folder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_39sdp"
                android:background="@drawable/button_selector_light"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone">

                <View
                    android:id="@+id/viewOption6"
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="#c6c6c6" />

                <TextView
                    android:id="@+id/tvFolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/font"
                    android:text="@string/change_folder"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/tvFolderChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_toEndOf="@+id/tvFolder"
                    android:ellipsize="end"
                    android:fontFamily="@font/font"
                    android:gravity="end"
                    android:maxLines="1"
                    android:text="@string/all_notes"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12ssp" />
            </RelativeLayout>

            <View
                android:id="@+id/viewOption5"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#c6c6c6" />

            <RelativeLayout
                android:id="@+id/rl_align"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:background="@drawable/button_selector_light_bottom"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvAlign1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/font"
                    android:text="@string/alignment"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/tvAlign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/font"
                    android:text="@string/left"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12ssp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
